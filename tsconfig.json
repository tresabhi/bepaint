{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "target": "es2021",
    "removeComments": true
  },
  "include": ["src/**/*", ".storybook/stories"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
