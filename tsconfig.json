{
  "compilerOptions": {
    "target": "ES3",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "declaration": true,
    "baseUrl": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },

  "include": ["src", "package.json", "tsconfig.json"],
  "exclude": ["**/*.test.ts"]
}
